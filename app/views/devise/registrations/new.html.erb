<h2>Criar Conta</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
 <div class="field">
    <%= f.label :nickname %><br />
    <%= f.text_field :nickname %>
     <% if resource.errors[:nickname].any? %>
        <span class="text-red-500 text-sm"><%= resource.errors[:nickname].first %></span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email %>
     <% if resource.errors[:email].any? %>
        <span class="text-red-500 text-sm"><%= resource.errors[:email].first %></span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: "new-password" %>
     <% if resource.errors[:password].any? %>
        <span class="text-red-500 text-sm"><%= resource.errors[:password].first %></span>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Criar Conta" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
