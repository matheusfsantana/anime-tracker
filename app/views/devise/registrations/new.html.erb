
<div class='flex justify-center items-center mx-auto'>
  <div class='w-96 bg-white shadow-lg p-6 rounded-lg'>
    <div class="text-lg text-center">
      <h2>Criar Conta</h2>
      <hr class="mt-3">
    </div>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="mt-3">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, autofocus: true, placeholder: "Seu apelido", class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500' %>
        <% if resource.errors[:nickname].any? %>
            <span class="text-red-500 text-sm"><%= resource.errors[:nickname].first %></span>
        <% end %>
      </div>

      <div class="mt-3">
        <%= f.label :email %>
        <%= f.email_field :email, autocomplete: "email", placeholder: "example@email.com", class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500' %> 
        <% if resource.errors[:email].any? %>
            <span class="text-red-500 text-sm"><%= resource.errors[:email].first %></span>
        <% end %>
      </div>

      <div class="mt-3">
        <%= f.label :password %>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "************", class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500' %>
        <% if resource.errors[:password].any? %>
            <span class="text-red-500 text-sm"><%= resource.errors[:password].first %></span>
        <% end %>
      </div>

      <div class="mt-3">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "************", class: 'mt-1 block w-full border-gray-300 rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500' %>
      </div>

      <div class="actions mt-3 w-full flex justify-center"> 
        <%= f.submit "Criar Conta", class: "py-2 w-full bg-indigo-600 text-white px-6 py-2 rounded-lg hover:bg-indigo-700 cursor-pointer" %>
      </div>
    <% end %>
    
    <div class="mt-3 text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
